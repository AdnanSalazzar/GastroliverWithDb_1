<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gastroliver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Homework_1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary ms-5">
                    <i class="bi bi-facebook p-3"></i>
                </button>
                <button class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-twitter p-3"></i>
                </button>
                <button class="navbar-toggler border-4 bordered-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto">
                        <button class="btn btn-outline-secondary">02-41080541-5</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <section>
        <div>
            <h1 class="front_title p-5 img-banner">
                শেখ রাসেল জাতীয় গ্যাস্ট্রোলিভার বহির্বিভাগের অনলাইন অ্যাপয়েন্টমেন্ট
                পদ্ধতিতে আপনাকে স্বাগতম
            </h1>
        </div>
    </section>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!--lastro-->

    <section class="image-lastro">
        <div class="p-5 text-center">
            <button class="btn btn-success footer rounded-5">
                <i class="bi bi-facebook"></i>
            </button>

            <button class="btn btn-success footer rounded-5">
                <i class="bi bi-twitter"></i>
            </button>

            <div class="m-4 bottom_link">
                <a href="">আমাদের সম্পর্কে </a> | <a href="">অ্যাপয়েন্টমেন্ট</a>
            </div>

            <p class="white-text">
                Copyright © 2024 SRNIGH ®. All Rights Reserved.
            </p>
        </div>
    </section>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GastroliverWithDb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
