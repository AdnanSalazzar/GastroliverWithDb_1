@model GastroliverWithDb.Models.TblPatient

@{
    ViewData["Title"] = "Patient Details";
    Layout = null ; 
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ReciptPage</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/reciptstyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    
</head>
<body>
    <div class="container mt-5 text-center">
        <h1 class="">
            Sheikh Russell National Gastroliver Outpatient <br />
            online appointment system
        </h1>

        <p class="mt-4 greyColor">
            Sher-E-Bangla Nagar,<br />
            Dhaka-1207 Telepohone: 80-02-/135691, Fa: 88-02-9114954 <br />
            Email:niku@hospi.dghs.gov.db <br />
            Website: www.nikdu.o
        </p>

        <h2>Patient Appointment Information</h2>

        <div class="d-flex justify-content-end">
            <p class=""><strong>TRACK: @Model.PatientId.ToString("D8")</strong></p>
        </div>

        <div class="border border-3 rounded-4 border-black p-2">
            <div class="row">
                <div class="col-6 d-flex justify-content-start flex-column text-start">
                    <p>Patient Name: @Model.Name</p>
                    <p>Phone Number: @($"*******{Model.PhoneNo.ToString().Substring(Math.Max(0, Model.PhoneNo.ToString().Length - 4))}")</p>
                    <p>Email: @Model.Email</p>
                    <p>National ID: @($"********{Model.Nid.ToString().Substring(Math.Max(0, Model.Nid.ToString().Length - 4))}")</p>
                </div>
                <div class="col-6 d-flex justify-content-start flex-column text-start">
                    <p>Gender: @Model.Gender</p>
                    <p>Age: @Model.Age</p>
                    <p>Room Number: @Model.Room.RoomNo</p>
                </div>
            </div>
        </div>
        <button class="btn btn-primary mt-3 d-flex justify-content-end" onclick="window.print()">Print</button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

</body>
</html>
